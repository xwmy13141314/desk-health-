<Window x:Class="DeskHealth.App.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="关于 DeskHealth"
        Width="400"
        Height="280"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Border Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="8"
            Margin="10">
        <StackPanel Margin="20">
            <!-- 标题 -->
            <TextBlock Text="DeskHealth"
                      FontSize="24"
                      FontWeight="Bold"
                      HorizontalAlignment="Center"
                      Foreground="#333333"/>

            <TextBlock Text="桌面健康提醒工具"
                      FontSize="14"
                      HorizontalAlignment="Center"
                      Foreground="#666666"
                      Margin="0,0,0,20"/>

            <!-- 分隔线 -->
            <Separator Margin="0,10"/>

            <!-- 版本信息 -->
            <TextBlock HorizontalAlignment="Center">
                <Run Text="版本：" FontWeight="SemiBold"/>
                <Run Text="1.0.0"/>
            </TextBlock>

            <!-- 描述 -->
            <TextBlock Text="一款极简、无干扰的桌面健康提醒工具。"
                      HorizontalAlignment="Center"
                      Foreground="#666666"/>

            <!-- 核心特性 -->
            <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                <Run Text="•" Foreground="#4CAF50"/>
                <Run Text=" 零配置：安装即用"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center">
                <Run Text="•" Foreground="#4CAF50"/>
                <Run Text=" 零打扰：静音提醒，不抢焦点"/>
            </TextBlock>
            <TextBlock HorizontalAlignment="Center">
                <Run Text="•" Foreground="#4CAF50"/>
                <Run Text=" 轻量级：资源占用极低"/>
            </TextBlock>

            <!-- 关闭按钮 -->
            <Button Content="确定"
                    Width="100"
                    Height="32"
                    Margin="0,20,0,0"
                    HorizontalAlignment="Center"
                    Click="OnOkClicked"/>

        </StackPanel>
    </Border>
</Window>
